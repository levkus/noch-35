generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  slug      String   @unique
  createdAt DateTime @default(now())
  
  // Drinks selections
  drinkBeer          Boolean @default(false)
  drinkWhiteWine     Boolean @default(false)
  drinkRedWine       Boolean @default(false)
  drinkStrong        Boolean @default(false)
  drinkNonAlcoholic  Boolean @default(false)
  
  // Attendance flags
  isAttending    Boolean @default(false)
  withPartner    Boolean @default(false)
  withKids       Boolean @default(false)
  notComing      Boolean @default(false)
  
  updatedAt DateTime @updatedAt
}
